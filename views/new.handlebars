<div class="container">
  <div class="row">
    <div class="container vertical-center">
      <form class="newPlaylist">
        <div class="form-group">
          <label for="pilotName">Pilot</label>
          <input type="text" class="form-control" id="pilotName" placeholder="Pilot Name" />
        </div>
        <div class="form-group">
          <label for="coPilotName">Co Pilot</label>
          <input type="text" class="form-control" id="coPilotName" placeholder="CoPilot Name" />
        </div>
        <div class="form-group">
          <label for="playListName">Playlist</label>
          <input type="text" class="form-control" id="playListName" placeholder="Playlist Name" />
        </div>
        <div class="container vertical-center">
          <button id="create" type="submit" class="btn loginButton">
            <svg width="180px" height="60px" viewBox="0 0 180 60" class="border">
              <polyline points="179,1 179,59 1,59 1,1 179,1" class="bg-line" />
              <polyline points="179,1 179,59 1,59 1,1 179,1" class="hl-line" />
            </svg>
            <span>Search</span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

